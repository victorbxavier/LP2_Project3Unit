<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Slider?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.ufrn.imd.controller.ViewController">
    <Label layoutX="119.0" layoutY="41.0" prefHeight="45.0" prefWidth="362.0" text="DETECTOR DE FAKE NEWS"
           textAlignment="CENTER">
        <font>
            <Font size="30.0"/>
        </font>
    </Label>
    <TextField id="txt_texto" fx:id="txtNoticia" layoutX="35.0" layoutY="175.0" prefHeight="25.0" prefWidth="238.0"
               promptText="texto da pulblicação"/>
    <Label layoutX="35.0" layoutY="150.0" text="Insera o texto da notícia">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <Label layoutX="38.0" layoutY="225.0" text="Insera o link da notícia">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <TextField id="txt_link" fx:id="txtLink" layoutX="35.0" layoutY="253.0" prefHeight="25.0" prefWidth="238.0"
               promptText="link da pulblicação"/>
    <DatePicker id="txt_data" fx:id="txtData" layoutX="305.0" layoutY="175.0" promptText="data da publicação"/>
    <Label layoutX="305.0" layoutY="150.0" text="Insira a data da notícia">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <Button id="bnt_submit" fx:id="BtnSubmit" layoutX="231.0" layoutY="315.0" mnemonicParsing="false"
            onAction="#onBtnSubmit" prefHeight="45.0" prefWidth="138.0" style="-fx-background-color: #20b2aa;"
            text="Submit"/>
    <Slider id="txt_porcentagem" fx:id="SliderLimiar" layoutX="300.0" layoutY="261.0" prefHeight="34.0" prefWidth="283.0"
            showTickLabels="true" showTickMarks="true"/>
    <Label layoutX="300.0" layoutY="238.0" text="Defina o limiar de confiança">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <Label fx:id="labelNoticia" layoutX="17.0" layoutY="387.0" prefHeight="101.0" prefWidth="567.0"
           textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <Label fx:id="labelPorcentagem" layoutX="232.0" layoutY="508.0" prefHeight="45.0" prefWidth="114.0"/>
    <Label fx:id="labelLimiar" layoutX="73.0" layoutY="618.0" prefHeight="45.0" prefWidth="431.0"/>
</VBox>
