<?import javafx.scene.layout.Pane?>
<Pane  style="-fx-background-color: #CCFFFF;" xmlns:fx="http://javafx.com/fxml"
      fx:controller="br.ufrn.imd.controller.ViewController">
    <Label layoutX="200" layoutY="30" prefHeight="45.0" prefWidth="362.0" text="DETECTOR DE FAKE NEWS" textAlignment="CENTER">
        <font>
            <Font size="25.0"/>
        </font>
    </Label>
    <Label layoutX="255" layoutY="150.0" text="Insera o texto da notícia">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <TextField id="txt_texto" fx:id="txtNoticia" layoutX="230" layoutY="175.0" prefHeight="25.0" prefWidth="238.0" promptText="texto da pulblicação"
               />
    <fx:define>
        <Integer fx:id="min" fx:value="0"/>
        <Integer fx:id="max" fx:value="10"/>
    </fx:define>
    <Label layoutX="200.0" layoutY="238.0" text="Defina o limiar de confiança entre 0 e 10">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <Spinner fx:id="spinner" min="$min" max="$max" layoutX="270.0" layoutY="280.0">
    </Spinner>
    <Label fx:id="labelLimiar" layoutX="300.0" layoutY="370.0" prefHeight="101.0" prefWidth="567.0"
           textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <Label fx:id="resultado" layoutX="300.0" layoutY="400.0" prefHeight="100.0" prefWidth="567.0"
           textAlignment="CENTER" wrapText="true">
        <font>
            <Font size="15.0"/>
        </font>
    </Label>
    <Button id="bnt_submit" fx:id="BtnSubmit" layoutX="285.0" layoutY="315.0" mnemonicParsing="false" maxHeight="100"
            onAction="#onBtnSubmit" prefHeight="45.0" prefWidth="138.0" style="-fx-background-color: #20b2aa;"
            text="Submit"/>
</Pane>
